{
    "editor.codeActionsOnSave": ["source.fixAll.eslint"],

    "editor.formatOnSave": true, // runs pretter on save

    "editor.defaultFormatter": "esbenp.prettier-vscode", // prettier extension must be installed
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode" // prettier extension must be installed
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode" // prettier extension must be installed
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode" // prettier extension must be installed
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode" // prettier extension must be installed
    },
    "[vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode" // prettier extension must be installed
    },

    "eslint.lintTask.enable": true, // you can run eslint for all files: F1 > Run Task > eslint: lint whole folder
    "eslint.validate": ["typescript", "javascript"],

    "typescript.preferences.quoteStyle": "single",

    "volar.completion.preferredTagNameCase": "kebab",
    "volar.completion.autoImportComponent": true,
    "volar.completion.preferredAttrNameCase": "auto-kebab"
}
